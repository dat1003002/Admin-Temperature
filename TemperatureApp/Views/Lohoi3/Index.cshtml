@{
    ViewData["Title"] = "LÒ HƠI 3";
}

<div class="list-searchroom">
    <div class="search-chart">
        <div class="search-date">
            <label for="startDate">Từ Ngày:</label>
            <input type="datetime-local" id="startDate"
                   value="@ViewData["StartDate"]"
                   onchange="filterByDate()" /> 
        </div>
        <div class="search-date">
            <label for="endDate">Đến Ngày:</label>
            <input type="datetime-local" id="endDate"
                   value="@ViewData["EndDate"]"
                   onchange="filterByDate()" />
        </div>
    </div>
    <div class="excel-control">
        <button onclick="exportToExcelPL()">Excel <img class="logo-drb" src="~/img/avatars/file-upload.png" alt="logo" /></button>
    </div>
</div>

<!-- Checkbox để điều khiển ẩn/hiện -->
<div class="checkbox-controls" style="color: white; background: black; display:flex; justify-content: center; align-items: center;">
    <label style="margin-right: 20px; color: rgb(54, 162, 235);">
        <input type="checkbox" id="hidePressureTT" onchange="toggleDataset(0)"> Áp Lực TT
    </label>
    <label style="margin-right: 20px; color: rgb(75, 192, 192);">
        <input type="checkbox" id="hideFanInTT" onchange="toggleDataset(1)"> Quạt đầu vào TT
    </label>
    <label style="color: rgb(255, 159, 64);">
        <input type="checkbox" id="hideFanOutTT" onchange="toggleDataset(2)"> Quạt đầu ra TT
    </label>
</div>

<div class="chart-container" style="height: 83vh; background: black;">
    <canvas id="boilerChart"></canvas>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> <!-- Thêm thư viện Chart.js -->
    <script>
        let chart; // Biến toàn cục để truy cập biểu đồ

        function filterByDate() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            if (startDate && endDate) {
                window.location.href = `?startDate=${startDate}&endDate=${endDate}`;
            }
        }

        function exportToExcelPL() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            if (!startDate || !endDate) {
                alert("Vui lòng chọn khoảng thời gian để xuất Excel!");
                return;
            }

            window.location.href = `/Lohoi3/ExportToExcel?startDate=${startDate}&endDate=${endDate}`;
        }

        function toggleDataset(index) {
            const meta = chart.getDatasetMeta(index);
            meta.hidden = !meta.hidden; // Đảo trạng thái ẩn/hiện
            chart.update(); // Cập nhật biểu đồ
        }

        const labels = @Html.Raw(Json.Serialize(ViewData["Labels"]));
        const pressureTT = @Html.Raw(Json.Serialize(ViewData["Pressure_TT"]));
        const fanInTT = @Html.Raw(Json.Serialize(ViewData["FanIn_TT"]));
        const fanOutTT = @Html.Raw(Json.Serialize(ViewData["FanOut_TT"]));

        // Debug dữ liệu
        console.log('Labels:', labels);
        console.log('Pressure_TT:', pressureTT);
        console.log('FanIn_TT:', fanInTT);
        console.log('FanOut_TT:', fanOutTT);

        const data = {
            labels: labels,
            datasets: [
                {
                    label: 'Áp Lực TT',
                    data: pressureTT,
                    borderColor: 'rgb(54, 162, 235)',
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    fill: false,
                    tension: 0.1
                },
                {
                    label: 'Quạt đầu vào TT',
                    data: fanInTT,
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.5)',
                    fill: false,
                    tension: 0.1
                },
                {
                    label: 'Quạt đầu ra TT',
                    data: fanOutTT,
                    borderColor: 'rgb(255, 159, 64)',
                    backgroundColor: 'rgba(255, 159, 64, 0.5)',
                    fill: false,
                    tension: 0.1
                }
            ]
        };

        const config = {
            type: 'line',
            data: data,
            options: {
                plugins: {
                    legend: {
                        display: false // Tắt chú thích
                    },
                    title: {
                        display: true,
                        text: 'Biểu đồ thông số Lò Hơi 3',
                        color: 'white',
                        font: {
                            size: 18,
                            weight: 'bold'
                        }
                    }
                },
                scales: {
                    x: {
                        display: true,
                        title: {
                            display: true,
                            text: 'Thời gian',
                            color: 'white',
                            font: {
                                size: 14
                            }
                        },
                        ticks: {
                            color: 'white',
                            maxRotation: 45,
                            minRotation: 45
                        },
                        grid: {
                            display: true, // Bật đường lưới dọc
                            color: 'rgba(255, 255, 255, 0.2)',
                            lineWidth: 1
                        }
                    },
                    y: {
                        display: true,
                        title: {
                            display: true,
                            color: 'white',
                            font: {
                                size: 14
                            }
                        },
                        ticks: {
                            color: 'white'
                        },
                        grid: {
                            display: true, // Bật đường lưới ngang
                            color: 'rgba(255, 255, 255, 0.2)',
                            lineWidth: 1
                        }
                    }
                }
            }
        };

        const ctx = document.getElementById('boilerChart').getContext('2d');
        chart = new Chart(ctx, config);
    </script>
}